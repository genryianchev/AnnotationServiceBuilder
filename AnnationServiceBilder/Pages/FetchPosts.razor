@page "/FetchPosts"
@using AnnationServiceBilder.Data.Models;
@using AnnationServiceBilder.Network.Services.Impl;
@using AnnationServiceBilder.Network.Services;

<h3>Posts</h3>

<button @onclick="LoadPosts">Fetch Posts</button>

@if (posts != null && posts.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Body</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in posts)
            {
                <tr>
                    <td>@post.Id</td>
                    <td>@post.Title</td>
                    <td>@post.Body</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No posts available. Click "Fetch Posts" to load data.</p>
}

@code {
    private List<Post> posts;

    [Inject]
    private IPostsService PostsService { get; set; }

    private async Task LoadPosts()
    {
        posts = await PostsService.GetPostsAsync();
        Console.WriteLine($"Total Posts: {posts.Count}");
    }
}
